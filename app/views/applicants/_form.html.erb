<% if applicant.errors.any? %>
  <div class="alert">
    <p>Não foi possível criar a promoção</p>
    <p>Confira os erros abaixo:</p>
    <ul>
      <% applicant.errors.full_messages.each do |m| %>
        <li><%= m %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<%= form_with(model: applicant) do |f| %>
  <div>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <div>
    <%= f.label :cpf %>
    <%= f.text_field :cpf %>
  </div>
  <div>
    <%= f.label :phone %>
    <%= f.text_field :phone %>
  </div>
  <div>
    <%= f.label :bio %>
    <%= f.text_field :bio %>
  </div>
  <%= f.submit 'Salvar perfil' %>
<% end %>
